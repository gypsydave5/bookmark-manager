<% if current_user %>
	<form id="sign-out" method="post" action="/sessions">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Sign out">
	</form>
	<% else %>
	<span><a href="/users/new" class="button">Sign-up</a></span>
	<span><a href="/sessions/new" class="button">Login</a></span>
<% end %>
