<% if current_user %>
	Welcome, <%= current_user.email %>
	<form method="post" action="/sessions">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Sign out">
	</form>
<% elsif request.path == "/sessions/new" %>
	<div><a href="/users/new"> Sign-up </a></div>
<% elsif request.path == "/users/new" %>
	<div><a href="/sessions/new"> Login </a></div>
<% else %>
	<div><a href="/sessions/new"> Login </a></div>
	<div><a href="/users/new"> Sign-up </a></div>
<% end %>
